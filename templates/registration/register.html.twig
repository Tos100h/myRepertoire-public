{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="content">
        <div class="row header">
            <div class="col-3 offset-lg-1 col-lg-2">
                {{ include('common/header.html.twig', {'class': 'bi-person-fill-add header-icon'}) }}
            </div>
            <div class="col-6 align-self-center text-center">
                <h1>Register</h1>
            </div>
        </div>


        <div class="d-flex align-items-center flex-column">
            <hr class="content-hr-primary">
        </div>
    
        <div class="custom-form mt-5">
            {{ form_start(registrationForm) }}
                <div class="mt-3 input-group d-flex justify-content-center">
                    <span class="col-4 col-lg-2 input-group-text">{{ form_label(registrationForm.email) }}</span>
                    <span class="col-6">{{ form_widget(registrationForm.email) }}</span>
                </div>
                <div class="mt-3 input-group d-flex justify-content-center">
                    <span class="col-4 col-lg-2 input-group-text">{{ form_label(registrationForm.name) }}</span>
                    <span class="col-6">{{ form_widget(registrationForm.name) }}</span>
                </div>
                <div class="mt-3 input-group d-flex justify-content-center">
                    <span class="col-4 col-lg-2 input-group-text">{{ form_label(registrationForm.plainPassword.first) }}</span>
                    <span class="col-6">{{ form_widget(registrationForm.plainPassword.first) }}</span>
                </div>
                <div class="mt-3 input-group d-flex justify-content-center">
                    <span class="col-4 col-lg-2 input-group-text">{{ form_label(registrationForm.plainPassword.second) }}</span>
                    <span class="col-6">{{ form_widget(registrationForm.plainPassword.second) }}</span>
                </div>

                <div class="mt-3 d-flex justify-content-center">
                    {{ form_row(registrationForm.agreeTerms) }}
                </div>

                <div class="mt-3 d-flex justify-content-center">
                    <button type="submit" class="btn custom-btn">Register</button>
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
