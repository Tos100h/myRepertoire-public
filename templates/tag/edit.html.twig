{% extends 'base.html.twig' %}

{% block title %}Edit Tag{% endblock %}

{% block body %}
    <div class="content">
        <div class="row header">
            <div class="col-3 offset-lg-1 col-lg-2">
                {{ include('common/header.html.twig', {'class': 'bi-tag header-icon'}) }}
            </div>
            <div class="col-6 align-self-center text-center">
                <h1>Edit Tag "{{ tag.name }}"</h1>
            </div>
            <div class="col-3 offset-lg-1 col-lg-2">
                {{ include('tag/_delete_form.html.twig') }} 
            </div>
        </div>


        <div class="d-flex align-items-center flex-column">
            <hr class="content-hr-primary">
        </div>

        <div class="custom-form mt-5">
            {{ include('tag/_form.html.twig', {'button_label': 'Update'}) }}
        </div>

        <div class="mt-5 d-flex align-items-center flex-column">
            <a href="{{ path('app_tag_index') }}" class="back-button mt-1">
                <i class="bi bi-arrow-left-circle"></i> back to tag list
            </a>
        </div>

    </div>
{% endblock %}
