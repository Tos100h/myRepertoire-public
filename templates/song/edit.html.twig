{% extends 'base.html.twig' %}

{% block title %}Edit Song{% endblock %}

{% block body %}
    <div class="content">
        <div class="row header">
            <div class="col-3 offset-lg-1 col-lg-2">
                {{ include('common/header.html.twig', {'class': 'bi-music-note-beamed header-icon'}) }}
            </div>
            <div class="col-6 align-self-center text-center">
                <h1>Edit <strong>"{{ song.name }}"</strong> </h1>
                {% if song.artists|length >0 %}
                    <h1>from {{ song.getArtistsName }}</h1>
                {% endif %}
            </div>
            <div class="col-3 offset-lg-1 col-lg-2">
                {{ include('song/_delete_form.html.twig') }}
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <hr class="content-hr-primary">
        </div>

        <div class="custom-form mt-5">
            {{ include('song/_form_edit.html.twig', {'button_label': 'Update'}) }}
        </div>

        <div class="mt-3 d-flex align-items-center flex-column">
            <a href="{{ path('app_song_show', {'id': song.id}) }}" class="back-button mt-1">
                <i class="bi bi-arrow-left-circle"></i> back to song
            </a>
        </div>

    </div>
    
    
{% endblock %}
