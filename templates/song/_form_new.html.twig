{{ form_start(form) }}

    <div class="row">
        <div class="col-12 col-lg-9">
        
            <div class="input-group d-flex justify-content-center">
                <span class="col-2 input-group-text">{{ form_label(form.song.name) }}</span>
                <span class="col-6">{{ form_widget(form.song.name) }}</span>
            </div>

            <div class="mt-3 input-group d-flex justify-content-center">
                <span class="col-2 input-group-text">{{ form_label(form.song.originalName) }}</span>
                <span class="col-6">{{ form_widget(form.song.originalName) }}</span>
            </div>

            <div class="mt-3 input-group d-flex justify-content-center">
                <span class="col-2 input-group-text">Soundtrack</span>
                <span class="col-6">{{ form_widget(form.song.ost) }}</span>
            </div>

            <div class="mt-3 input-group d-flex justify-content-center">
                <span class="col-2 input-group-text">{{ form_label(form.song.artists) }}</span>
                <span class="col-6 input-group-text">{{ form_widget(form.song.artists) }}</span>
            </div>
            <div class="mt-3 input-group d-flex justify-content-center mb-3">
                <span class="col-2 input-group-text">{{ form_label(form.newArtist) }}</span>
                <span class="col-6" placeholder="oui">{{ form_widget(form.newArtist) }}</span>
            </div>


        </div>
        <div class="col-6 col-lg-3">
            <div class="card">
                <div class="card-header custom-card text-center">
                    <h3>{{ form_label(form.song.tags) }}</h3>
                </div>
                <div class="card-body custom-card-body">
                    <span class="d-flex justify-content-center">{{ form_widget(form.song.tags) }}</span>
                </div>
            </div>
        </div>
