{{ form_start(form) }}

    <div class="input-group d-flex justify-content-center">
        <span class="col-2 input-group-text">{{ form_label(form.name) }}</span>
        <span class="col-6">{{ form_widget(form.name) }}</span>
    </div>

    <div class="mt-3 input-group d-flex justify-content-center">
        <span class="col-2 input-group-text">{{ form_label(form.public) }}</span>
        <span class="col-6">{{ form_widget(form.public) }}</span>
    </div>

    <div class="mt-4 d-flex justify-content-center ">
        <button class="btn custom-btn">
            {{ button_label|default('Save') }}
        </button>
    </div>
{{ form_end(form) }}
