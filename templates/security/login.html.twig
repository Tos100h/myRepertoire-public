{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="content">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="row header">
            <div class="col-3 offset-lg-1 col-lg-2">
                {{ include('common/header.html.twig', {'class': 'bi-person-fill header-icon'}) }}
            </div>
            <div class="col-6 align-self-center text-center">
                <h1>Please sign in</h1>
            </div>
        </div>


        <div class="d-flex align-items-center flex-column">
            <hr class="content-hr-primary">
        </div>
    
        <div class="custom-form mt-5">

            <form method="post">
                <div class="mt-3 input-group d-flex justify-content-center">
                    <span class="col-4 col-lg-2 input-group-text">
                        <label for="inputEmail">Email</label>
                    </span>
                    <span class="col-6">
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    </span>
                </div>

                <div class="mt-3 input-group d-flex justify-content-center">
                    <span class="col-4 col-lg-2 input-group-text">
                         <label for="inputPassword">Password</label>
                    </span>
                    <span class="col-6">
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </span>
                </div>                                                         

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                <div class="checkbox mt-3 d-flex justify-content-center">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                
                <div class="mt-3 d-flex justify-content-center">
                    <button class="btn custom-btn" type="submit">
                        Sign in
                    </button>
                </div>
            </form>
        </div>
{% endblock %}
